<resources>

    <!-- Dark base activity theme -->
    <style name="AppTheme.Primary.Base.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#33343B</item>
        <item name="colorPrimaryDark">#8033343B</item>
        <item name="colorAccent">#28292e</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/holo_blue_light</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <!--<item name="colorPrimaryDark">@android:color/holo_blue_dark</item>-->
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DarkToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#33343B</item>
    </style>

    <style name="LightToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
